@{
    ViewData["Title"] = "Home Page";
}

<section class="home-hero">
    <div class="hero-overlay">
        <div class="container h-100 d-flex align-items-center justify-content-center">
            <div class="card p-4 shadow-sm home-card" style="max-width:900px; width:100%;">
                <h1 class="mb-3">Find your next stay (Search coming soon!)</h1>
                <form class="row g-2">
                    <div class="col-md-5">
                        <input class="form-control" placeholder="Where are you going?" />
                    </div>
                    <div class="col-md-3">
                        <input class="form-control" placeholder="Check-in - Check-out" />
                    </div>
                    <div class="col-md-2">
                        <input class="form-control" placeholder="Guests" />
                    </div>
                    <div class="col-md-2 d-grid">
                        <button class="btn btn-primary">Search</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>