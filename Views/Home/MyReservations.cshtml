@model AirBB.Models.AirBBViewModels
@{
    ViewData["Title"] = "My Reservations";
}

<div class="container mt-5">
    <h2 class="mb-4">
        <i class="fa-solid fa-suitcase-rolling text-primary"></i> My Reservations
    </h2>



    @if (Model.Reservation != null && Model.Reservation.Any())
    {
        <table class="table table-bordered table-striped">
            <thead class="table-dark">
                <tr>
                    <th>Residence</th>
                    <th>Location</th>
                    <th>Check-In Date</th>
                    <th>Check-Out Date</th>
                    <th>Guests</th>
                    <th>Price/Night</th>
                    <th>Total Price</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var reservation in Model.Reservation)
                {
                    <tr>
                        <td>@reservation.Residence?.Name</td>
                        <td>@reservation.Residence?.Location?.Name</td>
                        <td>@reservation.ReservationStartDate.ToString("MM/dd/yyyy")</td>
                        <td>@reservation.ReservationEndDate.ToString("MM/dd/yyyy")</td>
                        <td>@reservation.Residence?.GuestNumber</td>
                        <td>$@reservation.Residence?.PricePerNight</td>
                        <td>
                            @{
                                var days = (reservation.ReservationEndDate - reservation.ReservationStartDate).Days;
                                var price = int.Parse(reservation.Residence?.PricePerNight ?? "0"); // use null-coalescing operator
                                var total = days * price;
                            }
                            $@total
                        </td>
                        <td>
                            <form asp-action="CancelReservation" method="post" style="display:inline;">
                                <input type="hidden" name="id" value="@reservation.ReservationId" />
                                <button type="submit" class="btn btn-danger btn-sm">
                                    <i class="fa-solid fa-xmark"></i> Cancel
                                </button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <div class="alert alert-info">You have no reservations yet.</div>
    }

    <div class="mt-4">
        <a asp-action="Index" class="btn btn-secondary"
           asp-route-activeLocation="@Model.ActiveLocation"
           asp-route-activeCheckInDate="@Model.ActiveCheckInDate"
           asp-route-activeCheckOutDate="@Model.ActiveCheckOutDate"
           asp-route-activeNoOfGuests="@Model.ActiveNoOfGuests">
            <i class="fa-solid fa-arrow-left"></i> Back to Home
        </a>
    </div>
</div>
