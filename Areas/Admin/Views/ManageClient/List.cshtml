@model List<AirBB.Models.Client>
@{
    ViewData["Title"] = "Client";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2>Client</h2>
        <a asp-controller="ManageClient" asp-action="Add" class="btn btn-primary">
            + Add New Client
        </a>
    </div>

    @if (Model != null && Model.Any())
    {
        <div class="card shadow-lg p-4">
            <h4 class="mb-3 text-primary">Client Details</h4>
            <hr />

            <div class="table-responsive">
                <table class="table table-bordered table-striped align-middle">
                    <thead class="table-light">
                        <tr>
                            <th>Name</th>
                            <th>Email</th>
                            <th>Phone Number</th>
                            <th>SSN</th>
                            <th>Date of Birth</th>
                            <th>User Type</th>
                            <th class="text-center">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var client in Model)
                        {
                            <tr>
                                <td>@client.Name</td>
                                <td>@client.Email</td>
                                <td>@client.PhoneNumber</td>
                                <td>@client.SSN</td>
                                <td>@client.DOB</td>
                                <td>@client.UserType</td>
                                <td class="text-center">
                                    <a asp-controller="ManageClient" asp-action="Edit"
                                       asp-route-id="@client.ClientId"
                                       class="btn btn-sm btn-outline-primary me-2">
                                        Edit
                                    </a>
                                    <a asp-controller="ManageClient" asp-action="Delete"
                                       asp-route-id="@client.ClientId"
                                       class="btn btn-sm btn-outline-danger">
                                        Delete
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    }
    else
    {
        <div class="alert alert-info text-center mt-4">
            No clients found. <a asp-controller="ManageClient" asp-action="Add">Add one now</a>.
        </div>
    }
</div>
