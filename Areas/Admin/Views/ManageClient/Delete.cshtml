@model AirBB.Models.Client
@{
    ViewData["Title"] = "Delete Client";
}

<div class="container mt-4">
    <div class="card shadow-lg p-4">
        <h2 class="mb-3 text-danger">Confirm Deletion</h2>
        <p class="text-muted">Are you sure you want to delete this client?</p>

        <hr />

        <div class="row mb-3">
            <div class="col-md-6">
                <strong>Name:</strong> @Model.Name
            </div>
            <div class="col-md-6">
                <strong>Email:</strong> @Model.Email
            </div>
        </div>

        <div class="row mb-3">
            <div class="col-md-6">
                <strong>Phone Number:</strong> @Model.PhoneNumber
            </div>
            <div class="col-md-6">
                <strong>SSN:</strong> @Model.SSN
            </div>
        </div>

        <div class="row mb-3">
            <div class="col-md-6">
                <strong>Date of Birth:</strong> @Model.DOB
            </div>
            <div class="col-md-6">
                <strong>User Type:</strong> @Model.UserType
            </div>
        </div>

        <form asp-action="Delete" method="post" class="mt-4">
            <input type="hidden" asp-for="ClientId" />

            <div class="d-flex justify-content-between">
                <a asp-action="List" asp-controller="ManageClient" class="btn btn-secondary">← Cancel</a>
                <button type="submit" class="btn btn-danger">Delete Client</button>
            </div>
        </form>
    </div>
</div>
