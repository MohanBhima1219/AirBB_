@model AirBB.Models.Location
@{
    ViewData["Title"] = "Delete Location";
}

<div class="container mt-4">
    <div class="card shadow-lg p-4">
        <h2 class="mb-3 text-danger">Confirm Deletion</h2>
        <p class="text-muted">Are you sure you want to delete this location?</p>

        <hr />

        <div class="row mb-3">
            <div class="col-md-6">
                <strong>Location ID:</strong> @Model.LocationId
            </div>
            <div class="col-md-6">
                <strong>Location Name:</strong> @Model.Name
            </div>
        </div>

        <form asp-action="Delete" method="post" class="mt-4">
            <input type="hidden" asp-for="LocationId" />

            <div class="d-flex justify-content-between">
                <a asp-action="List" asp-controller="ManageLocation" class="btn btn-secondary">← Cancel</a>
                <button type="submit" class="btn btn-danger">Delete Location</button>
            </div>
        </form>
    </div>
</div>
